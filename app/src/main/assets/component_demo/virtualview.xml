<VHLayout
        flag="flag_exposure"
        orientation="V"
        background="#FFFFFF"
        layoutWidth="match_parent"
        layoutHeight="wrap_content">

    <VH2Layout
        flag="flag_exposure"
        orientation="H"
        layoutMarginTop="15"
        layoutMarginRight="10"
        layoutMarginLeft="15"
        layoutMarginBottom="10"
        layoutWidth="match_parent"
        layoutHeight="wrap_content">

        <VH2Layout
            flag="flag_exposure"
            orientation="V"
            layoutDirection="left"
            layoutGravity="v_center"
            layoutWidth="match_parent"
            background="#ff00ff"
            layoutMarginRight="${marginRight2}"
            layoutHeight="match_parent">

            <NText
                id="2"
                layoutDirection="top"
                layoutWidth="wrap_content"
                textSize="18"
                text="${content}"
                textColor="#323232"
                maxLines="1"
                layoutHeight="wrap_content"/>

            <VH2Layout
                layoutDirection="bottom"
                orientation="H"
                layoutWidth="match_parent"
                layoutHeight="match_parent" >

            <NText
                id="3"
                layoutWidth="wrap_content"
                textSize="12"
                text="${info}"
                textColor="#999999"
                maxLines="1"
                layoutGravity="bottom"
                layoutHeight="wrap_content"/>

            <NText
                id="4"
                layoutWidth="wrap_content"
                textSize="12"
                text="${reply}"
                layoutMarginLeft="15"
                textColor="#999999"
                maxLines="1"
                layoutGravity="bottom"
                layoutHeight="wrap_content"/>

                <NImage
                    id="3"
                    src="all_btn_close"
                    scaleType="center_inside"
                    layoutWidth="wrap_content"
                    layoutGravity="bottom"
                    layoutMarginBottom="-5"
                    layoutDirection="right"
                    layoutHeight="28" />

            </VH2Layout>

        </VH2Layout>

        <NImage
            id="6"
            src="${logoUrl}"
            scaleType="center_crop"
            layoutWidth="${picWidth}"
            layoutGravity="v_center"
            layoutMarginRight="5"
            layoutMarginLeft="15"
            layoutDirection="right"
            layoutHeight="${picHeight}" />

    </VH2Layout>

    <VLine
        layoutMarginLeft="15"
        layoutMarginTop="5"
        layoutWidth="match_parent"
        layoutHeight="0.5"
        layoutGravity="v_center"
        paintWidth="0.3"
        orientation="H"
        color="#E8E8E8" />

</VHLayout>